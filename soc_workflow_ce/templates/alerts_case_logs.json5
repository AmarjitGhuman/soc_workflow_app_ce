// POST _template/alerts_case_logs
{
  "order": 100,
  "index_patterns": [
    "case_logs*",
    "alerts_logs*"
  ],
  "settings": {
    "index": {
      "analysis": {
        "normalizer": {
          "useLowercase": {
            "filter": [
              "lowercase"
            ],
            "type": "custom"
          }
        }
      },
      "number_of_shards": "3",
      "number_of_replicas": "1"
    }
  },
  "mappings": {
    "dynamic": false,
    "properties": {
      "event.severity": {
        "type": "short"
      },
      "@timestamp": {
        "format": "epoch_millis||epoch_second||date_time||MMM dd yyyy HH:mm:ss",
        "type": "date"
      },
      "message": {
        "type": "keyword",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256,
            "normalizer": "useLowercase"
          }
        }
      },
      "event.labels": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256,
            "normalizer": "useLowercase"
          }
        }
      },
      "comment": {
        "type": "text"
      },
      "soupce.ip": {
        "type": "ip"
      },
      "destination.ip": {
        "type": "ip"
      },
      "device.product": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256,
            "normalizer": "useLowercase"
          }
        }
      },
      "name": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256,
            "normalizer": "useLowercase"
          }
        }
      },
      "events.id": {
        "type": "text"
      },
      "event_id": {
        "type": "keyword"
      },
      "tags": {
        "type": "text"
      }
    }
  },
  "aliases": {}
}